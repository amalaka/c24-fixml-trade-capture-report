    <dependencies>
        <dependency>
            <groupId>biz.c24.io</groupId>
            <artifactId>c24-io-api</artifactId>
            <version>${c24.api.version}</version>
        </dependency>
        <dependency>
            <groupId>biz.c24.io.fixml</groupId>
            <artifactId>FixML-44</artifactId>
            <version>44</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/biz.c24.io.fixml44.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>biz.c24.io.fixml-proto</groupId>
            <artifactId>FixML-44-proto</artifactId>
            <version>44</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/org.fixprotocol.fixml44.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>biz.c24.io.spring</groupId>
            <artifactId>c24-spring-core</artifactId>
