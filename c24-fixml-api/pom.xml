<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>c24-fixml-api</groupId>
    <artifactId>c24-fixml-api</artifactId>
    <packaging>jar</packaging>
    <version>1.0</version>
    <name>c24-fixml-api</name>

    <properties>
        <org.springframework.version>3.2.2.RELEASE</org.springframework.version>
        <junit.version>4.11</junit.version>
        <c24-fixml-model.version>1.0</c24-fixml-model.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>c24-fixml-model</groupId>
            <artifactId>model</artifactId>
            <!--<artifactId>c24-fixml-models</artifactId>-->
            <version>${c24-fixml-model.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>org.springframework.context</artifactId>
            <version>${org.springframework.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>